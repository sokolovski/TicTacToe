<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TableRow 	android:layout_width="match_parent"
        		android:layout_height="wrap_content">
        
        <TextView	android:id="@+id/a1"
            		android:layout_width="0dp"
            		android:layout_weight="1"
            		android:layout_height="wrap_content"
            		android:onClick="areaClicked"
            		android:text="@string/blank"
            		android:clickable="true" />
        
        <TextView	android:id="@+id/a2"
            		android:layout_width="0dp"
            		android:layout_weight="1"
            		android:layout_height="wrap_content"
            		android:onClick="areaClicked"
            		android:text="@string/blank"
            		android:clickable="true" />
        
        <TextView	android:id="@+id/a3"
            		android:layout_width="0dp"
            		android:layout_weight="1"
            		android:layout_height="wrap_content"
            		android:onClick="areaClicked"
            		android:text="@string/blank"
            		android:clickable="true" />
        
    </TableRow>
    
    <TableRow 	android:layout_width="match_parent"
        		android:layout_height="wrap_content">
        
        <TextView	android:id="@+id/a4"
            		android:layout_width="0dp"
            		android:layout_weight="1"
            		android:layout_height="wrap_content"
            		android:onClick="areaClicked"
            		android:text="@string/blank"
            		android:clickable="true" />
        
        <TextView	android:id="@+id/a5"
            		android:layout_width="0dp"
            		android:layout_weight="1"
            		android:layout_height="wrap_content"
            		android:onClick="areaClicked"
            		android:text="@string/blank"
            		android:clickable="true" />
        
        <TextView	android:id="@+id/a6"
            		android:layout_width="0dp"
            		android:layout_weight="1"
            		android:layout_height="wrap_content"
            		android:onClick="areaClicked"
            		android:text="@string/blank"
            		android:clickable="true" />
        
    </TableRow>
    
    <TableRow 	android:layout_width="match_parent"
        		android:layout_height="wrap_content">
        
        <TextView	android:id="@+id/a7"
            		android:layout_width="0dp"
            		android:layout_weight="1"
            		android:layout_height="wrap_content"
            		android:onClick="areaClicked"
            		android:text="@string/blank"
            		android:clickable="true" />
        
        <TextView	android:id="@+id/a8"
            		android:layout_width="0dp"
            		android:layout_weight="1"
            		android:layout_height="wrap_content"
            		android:onClick="areaClicked"
            		android:text="@string/blank"
            		android:clickable="true" />
        
        <TextView	android:id="@+id/a9"
            		android:layout_width="0dp"
            		android:layout_weight="1"
            		android:layout_height="wrap_content"
            		android:onClick="areaClicked"
            		android:text="@string/blank"
            		android:clickable="true" />
        
    </TableRow>
    
    <TableRow 	android:layout_width="match_parent"
        		android:layout_height="wrap_content">
        
        <TextView	android:id="@+id/game_over"
            		android:layout_width="0dp"
            		android:layout_weight="2"
            		android:layout_height="wrap_content" />
        
        <Button android:id="@+id/restart"
            	android:layout_width="0dp"
            	android:layout_weight="1"
            	android:layout_height="wrap_content"
            	android:text="@string/restart"
            	android:onClick="restart" />
        
    </TableRow>
    
    <TableRow 	android:layout_width="match_parent"
        		android:layout_height="wrap_content">
        
        <TextView	android:id="@+id/avg"
            		android:layout_width="match_parent"
            		android:layout_height="wrap_content" />
        
    </TableRow>

</TableLayout>